import os
# Aseg√∫rate de que las rutas de importaci√≥n sean correctas
from ControladorGemini import ControladorGemini 

# --- Obtener Clave API ---
try:
    # üåü Usamos os.environ para obtener la clave configurada en tu entorno
    CLAVE_API = os.environ["Clave_Api_Gemini"]
except KeyError:
    print("‚ùå ERROR: La variable de entorno 'CLAVE_API_GEMINI' no est√° configurada.")
    CLAVE_API = None 


# --- Funci√≥n Principal de Arranque ---
def ejecutar_aplicacion():
    """
    Funci√≥n que inicializa y ejecuta el Controlador Gemini.
    """
    if not CLAVE_API:
        print("üõë No se puede ejecutar la aplicaci√≥n. La clave API es necesaria.")
        return

    print("\n--- Iniciando Sistema de Generaci√≥n Aumentada por Recuperaci√≥n (RAG) ---")
    
    try:
        controlador_app = ControladorGemini(clave_api=CLAVE_API)
        
        print("\nüéâ √âXITO: El sistema de capas Gemini se ha inicializado y el almac√©n RAG se ha configurado.")
        
  
        
    except Exception as e:
        print(f"\n‚ùå FALLO CR√çTICO al inicializar el Controlador o el flujo RAG: {e}")

if __name__ == "__main__":
    ejecutar_aplicacion()